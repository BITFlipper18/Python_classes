from turtle import Turtle
from utils import usefull_functions


def teken_driehoek(lengte):
    for x in range(3):
        turtle.forward(lengte)
        turtle.left(360/3)

def teken_vierhoek(lengte):
    for x in range(4):
        turtle.forward(lengte)
        turtle.right(360/4)

# for i in range(2):
    teken_driehoek(50)



turtle.mainloop()
